        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Name="button_oem" Content="`" Style="{StaticResource Button_Red}"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
            <Button Name="button_1" Content="1" Style="{StaticResource Button_Red}"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2">
            <Button Name="button_2" Content="2" Style="{StaticResource Button_Red}"/>
