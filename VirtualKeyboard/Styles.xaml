<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Style_Button" TargetType="Control" >
        <Setter Property="Margin" Value="1"/>
    </Style>

    <Style x:Key="Button_Red" TargetType="Button"
           BasedOn="{StaticResource Style_Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button" >
                    <Border  BorderBrush="Black" CornerRadius="8" BorderThickness="2"  
                             TextBlock.Foreground="Black" 
                             TextBlock.FontSize="25" 
                             TextBlock.TextAlignment="Center">
                        <Border.Background>
                            <LinearGradientBrush>
                                <GradientStopCollection>
                                    <GradientStop Offset="0" Color="DarkRed"></GradientStop>
                                    <GradientStop Offset="1" Color="WhiteSmoke"></GradientStop>
                                </GradientStopCollection>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter RecognizesAccessKey="True" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

